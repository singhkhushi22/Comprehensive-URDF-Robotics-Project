<?xml version="1.0"?>
<robot name="basic_humanoid_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Base Link -->
  <link name="base_box">
    <visual>
      <geometry>
        <box size="2.5 1.5 0.10"/>
      </geometry>
      <material name="gray">
        <color rgba="0 0 0 0.5"/>
      </material>
    </visual>
  </link>

  <!-- Top Link -->
  <link name="top_box">
    <visual>
      <geometry>
        <box size="0.50 0.50 0.30"/>
      </geometry>
      <material name="gray">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="top_to_base" type="fixed">
    <parent link="base_box"/>
    <child link="top_box"/>
    <origin xyz="0.50 0 0"/>
  </joint>

  <!-- Wheels -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.30"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.30"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_box"/>
    <child link="left_wheel"/>
    <origin xyz="1 -0.75 -0.30" rpy="1.55 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_box"/>
    <child link="right_wheel"/>
    <origin xyz="1 0.75 -0.30" rpy="1.55 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Casters -->
  <link name="left_caster">
    <visual>
      <geometry>
        <sphere radius="0.30"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="right_caster">
    <visual>
      <geometry>
        <sphere radius="0.30"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_left_caster" type="continuous">
    <parent link="base_box"/>
    <child link="left_caster"/>
    <origin xyz="-1 -0.75 -0.20"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_right_caster" type="continuous">
    <parent link="base_box"/>
    <child link="right_caster"/>
    <origin xyz="-1 0.75 -0.20"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- LiDAR Sensor -->
  <link name="lidar_sensor">
    <visual>
      <geometry>
        <box size="0.10 0.10 0.10"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_to_base" type="fixed">
    <parent link="top_box"/>
    <child link="lidar_sensor"/>
    <origin xyz="0.0 0 0.20"/>
  </joint>

  <gazebo>
    <sensor type="ray" name="lidar_sensor_ray">
      <update_rate>10.0</update_rate>
      <pose>0 0 0 0 0 0</pose>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.1</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
        <topicName>/scan</topicName>
        <frameName>lidar_sensor</frameName>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Camera -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.10 0.10 0.10"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.10 0.10 0.10"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_box"/>
    <child link="camera_link"/>
    <origin xyz="1.10 -0.03 0.10" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <sensor type="camera" name="camera_sensor">
      <update_rate>30.0</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>30.0</updateRate>
        <cameraName>camera</cameraName>
        <imageTopicName>/camera/image_raw</imageTopicName>
        <cameraInfoTopicName>/camera/camera_info</cameraInfoTopicName>
      </plugin>
    </sensor>
  </gazebo>

</robot>





